doctype html
html
  head
    if process.env.NODE_ENV === 'production'
      include ../includes/ga
    meta(name="viewport" content="width=device-width, initial-scale=1")
    title!= (title ? title + ' &raquo; ' : '') + 'Writer\'s Trail'
    link(rel="shortcut icon" type="image/png" href="/favicon.png")
    link(rel='stylesheet', href='/stylesheets/embed.css')
    link(rel='canonical', href=baseurl + objectlink)
  body
    #chart
    script(type='text/javascript', src='/bower_components/jquery/dist/jquery.min.js')
    script(type='text/javascript', src='/vendor/highcharts/highcharts.min.js')
    script(type='text/javascript', src='/vendor/highcharts/exporting.min.js')
    script(type='text/javascript', src='/scripts/highcharts-init.min.js')
    script(type='text/javascript', src='/scripts/chart.min.js')
    script.
      var link = '!{datalink}',
              csrfvalue = '!{csrf}';
      window.linkChart(link, jQuery, Highcharts, #{object.unit ? "'" + object.unit + "'" : 'null'},
              '<a href="#{objectlink}" target="_blank">#{object.name}</a>', #{object.zoneOffset || 0});
